<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="assessment.android.istar.com.androidassessment.template.BasicFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="#DCDCDC"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:id="@+id/label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000"
                android:padding="10dp"
                android:text="MULTIPLE CHOICE"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />


            <ScrollView
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/label"
                android:background="#fff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <WebView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Question 1"
                        android:textSize="30sp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/layoutBtn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/question"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:cardElevation="8dp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkbtn5"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textAlignment="center"
                            android:visibility="gone" />

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/layoutBtn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn1"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:cardElevation="8dp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkbtn5"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textAlignment="center"
                            android:visibility="gone" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layoutBtn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn2"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:cardElevation="8dp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkbtn5"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textAlignment="center"
                            android:visibility="gone" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layoutBtn4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn3"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:cardElevation="8dp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkbtn5"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textAlignment="center"
                            android:visibility="gone" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layoutBtn5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn4"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="8dp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/checkbtn5"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textAlignment="center"
                            android:visibility="gone" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layoutBtn6"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/layoutBtn4"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:minHeight="60dp"
                        android:visibility="visible"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="8dp">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            fancy:fb_borderColor="#FFFFFF"
                            fancy:fb_defaultColor="#FFFFFF"
                            fancy:fb_focusColor="#eee83e"
                            fancy:fb_fontIconSize="0sp"
                            fancy:fb_iconPaddingBottom="0dp"
                            fancy:fb_iconPosition="top"
                            fancy:fb_text="SUBMIT"
                            fancy:fb_textColor="#444444"
                            fancy:fb_textSize="18sp" />
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/hidden_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hidden_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hidden_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:visibility="gone" />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>