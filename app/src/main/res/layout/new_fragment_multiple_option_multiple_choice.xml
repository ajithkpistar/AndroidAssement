<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000"
                android:text="Multiple Choice"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <View
                android:id="@+id/view_dummy"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/label"
                android:layout_margin="10sp"
                android:background="#fff" />

            <ScrollView
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/view_dummy"
                android:background="#00000000"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000">

                    <WebView
                        android:id="@+id/passage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text=""
                        android:textSize="30sp"
                        android:visibility="gone" />

                    <WebView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/passage"
                        android:layout_margin="10dp"
                        android:text="Question 1"
                        android:textSize="30sp" />


                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/question"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="50"
                        app:rv_centered="false"
                        app:rv_color="@color/ripplecolor"
                        app:rv_rippleDuration="100">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:text=""
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </com.andexert.library.RippleView>


                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn1"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="50"
                        app:rv_centered="false"
                        app:rv_color="@color/ripplecolor"
                        app:rv_rippleDuration="100">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn2"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="50"
                        app:rv_centered="false"
                        app:rv_color="@color/ripplecolor"
                        app:rv_rippleDuration="100">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/option3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn3"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="50"
                        app:rv_centered="false"
                        app:rv_color="@color/ripplecolor"
                        app:rv_rippleDuration="100">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4" />

                        <TextView
                            android:id="@+id/option4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn4"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="50"
                        app:rv_centered="false"
                        app:rv_color="@color/ripplecolor"
                        app:rv_rippleDuration="100">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkbtn5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/option4"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/option5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn5"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        app:rv_alpha="50"
                        app:rv_centered="false"
                        app:rv_color="@color/ripplecolor"
                        app:rv_rippleDuration="100">


                        <TextView
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="SUBMIT"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </com.andexert.library.RippleView>

                    <TextView
                        android:id="@+id/hidden_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hidden_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hidden_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:visibility="gone" />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>