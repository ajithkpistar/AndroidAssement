<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="#DCDCDC"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:id="@+id/label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000"
                android:padding="10dp"
                android:text="SINGLE CHOICE"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />


            <ScrollView
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/label"
                android:background="#fff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <WebView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Question 1"
                        android:textSize="30sp" />

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/question"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="50">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center" />
                    </com.andexert.library.RippleView>


                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn1"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="50">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center" />
                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn2"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="50">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbtn3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center" />
                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn3"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="50">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbtn4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center" />
                    </com.andexert.library.RippleView>

                    <com.andexert.library.RippleView
                        android:id="@+id/layoutBtn5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBtn4"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#ffffff"
                        android:elevation="10dp"
                        android:minHeight="60dp"
                        android:visibility="gone"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="50">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbtn5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text=""
                            android:visibility="gone" />

                        <WebView
                            android:id="@+id/option5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:minHeight="60dp"
                            android:text=""
                            android:textAlignment="center" />
                    </com.andexert.library.RippleView>

                    <TextView
                        android:id="@+id/hidden_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hidden_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/hidden_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:visibility="gone" />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

