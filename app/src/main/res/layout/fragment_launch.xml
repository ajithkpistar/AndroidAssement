<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="assessment.android.istar.com.androidassessment.LaunchFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="HOMOPHONES AND OTHER CONFUSING WORDS"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="23dp"
        android:id="@+id/text"/>

    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:layout_below="@+id/text"
        android:background="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Pre Assessment Homophones"
        android:layout_margin="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/line"
        android:id="@+id/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="All questions are compulsory All questions are OBJECTIVE multiple choice Each Question will have at least 4 choice"
        android:layout_margin="20dp"
        android:textSize="16dp"
        android:textColor="#000"
        android:layout_below="@+id/title"
        android:id="@+id/description"/>

    <Button
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="LAUNCH TEST"
        android:background="#000"
        android:textColor="@android:color/white"
        android:layout_below="@+id/description"
        android:id="@+id/launchBtn"/>
</RelativeLayout>
